{
    "name": "sslmgr/certificate-manager",
    "description": "SSL Certificate Management System - PHP Components",
    "type": "project",
    "require": {
        "php": ">=8.1",
        "phpseclib/phpseclib": "^3.0",
        "guzzlehttp/guzzle": "^7.8",
        "monolog/monolog": "^3.4",
        "symfony/console": "^6.3",
        "symfony/yaml": "^6.3",
        "doctrine/dbal": "^3.6",
        "league/oauth2-client": "^2.7",
        "firebase/php-jwt": "^6.8"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.3",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "SSLManager\\": "src/php/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SSLManager\\Tests\\": "tests/php/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf"
    }
}

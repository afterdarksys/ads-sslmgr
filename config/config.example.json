{
    "database": {
        "type": "sqlite",
        "host": "localhost",
        "port": 5432,
        "name": "sslmgr.db",
        "username": "",
        "password": ""
    },
    "email": {
        "smtp_server": "smtp.gmail.com",
        "smtp_port": 587,
        "username": "your-email@gmail.com",
        "password": "your-app-password",
        "from_address": "ssl-manager@yourcompany.com",
        "use_tls": true
    },
    "snmp": {
        "enabled": false,
        "community": "public",
        "host": "localhost",
        "port": 161,
        "oid_base": "1.3.6.1.4.1.12345"
    },
    "certificate_authorities": {
        "letsencrypt": {
            "enabled": true,
            "staging": false,
            "email": "admin@yourcompany.com"
        },
        "digicert": {
            "enabled": false,
            "api_key": "your-digicert-api-key",
            "organization_id": "your-org-id"
        },
        "comodo": {
            "enabled": false,
            "api_key": "your-comodo-api-key",
            "customer_uri": "your-customer-uri"
        }
    },
    "cloud_providers": {
        "aws": {
            "enabled": false,
            "access_key_id": "your-aws-access-key",
            "secret_access_key": "your-aws-secret-key",
            "region": "us-east-1"
        },
        "cloudflare": {
            "enabled": false,
            "api_token": "your-cloudflare-api-token",
            "zone_id": "your-zone-id"
        }
    },
    "oauth2": {
        "client_id": "your-oauth2-client-id",
        "client_secret": "your-oauth2-client-secret",
        "redirect_uri": "http://localhost:5000/auth/callback",
        "authorization_url": "https://your-provider.com/oauth/authorize",
        "token_url": "https://your-provider.com/oauth/token"
    },
    "web": {
        "host": "0.0.0.0",
        "port": 5000,
        "debug": false,
        "secret_key": "your-secret-key-change-this"
    },
    "directories": {
        "certificates": "/path/to/certificates",
        "cache": "./cache",
        "logs": "./logs"
    },
    "certificate_formats": {
        "supported_extensions": [".pem", ".crt", ".cer", ".der", ".p7b", ".p7c", ".p10", ".csr", ".req", ".p12", ".pfx", ".pvk", ".cose", ".cbor", ".cwt"],
        "default_export_format": "pkcs10_pem",
        "enable_format_detection": true,
        "cose_support": {
            "enabled": true,
            "supported_algorithms": ["ES256", "ES384", "ES512", "PS256", "PS384", "PS512", "RS256", "RS384", "RS512"],
            "default_algorithm": "ES256",
            "embed_x509_certificates": true
        },
        "cwt_support": {
            "enabled": true,
            "default_claims": {
                "iss": "SSL Certificate Manager",
                "aud": "certificate-system",
                "iat": "auto",
                "exp": "auto"
            }
        }
    },
    "pkcs11": {
        "enabled": false,
        "library_path": "/usr/lib/pkcs11/opensc-pkcs11.so",
        "token_label": "SmartCard",
        "pin": "",
        "experimental_warning": "PKCS11 support is experimental - use with caution in production"
    },
    "legacy_formats": {
        "pvk_import_enabled": true,
        "pvk_export_warning": "PVK export disabled - use modern PKCS10 format instead",
        "legacy_conversion_recommended": true
    },
    "notification_days": [120, 90, 60, 30, 15, 5, 2, 1]
}
